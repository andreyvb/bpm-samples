<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="com.company.bpmsamples.web.forms.contract">
    <data>
        <instance id="procInstanceDc" class="com.haulmont.bpm.entity.ProcInstance" view="procInstance-edit">
            <collection id="procActorsDc" property="procActors"/>
            <collection id="procAttachmentsDc" property="procAttachments"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"
                resizable="true"/>
    <layout>
        <hbox spacing="true">
            <label value="msg://contractInfoPrefix" align="MIDDLE_LEFT"/>
            <textField id="contractField" width="300px" editable="false"/>
        </hbox>
        <hbox spacing="true">
            <label value="msg://automaticApprovalPeriod" align="MIDDLE_LEFT"/>
            <textField id="automaticApprovalPeriodField" width="100px" datatype="int"/>
        </hbox>
        <frame id="procActorsFrame" screen="procActorsFrame" height="200px"/>
        <hbox id="formActions" spacing="true">
            <button id="commit" caption="mainMsg://actions.Ok"/>
            <button id="cancel" caption="mainMsg://actions.Cancel"/>
        </hbox>
    </layout>
</window>